{
    "name": "victorstack/kinsta-reliability-audit",
    "description": "WordPress reliability audit report builder inspired by agency-grade hosting runbooks.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "KinstaReliabilityAudit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KinstaReliabilityAudit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs"
    }
}
